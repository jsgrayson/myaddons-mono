<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

  <Frame name="PetWeaverFrame" parent="UIParent" toplevel="true" movable="true" enableMouse="true" hidden="true" inherits="PortraitFrameTemplate">
    <Size x="650" y="500"/>
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    
    <Layers>
      <Layer level="BACKGROUND">
        <Texture file="Interface\FrameGeneral\UI-Background-Marble" horizTile="true" vertTile="true">
          <Anchors>
            <Anchor point="TOPLEFT" x="5" y="-25"/>
            <Anchor point="BOTTOMRIGHT" x="-5" y="5"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>

    <Frames>
        <Frame parentKey="ListFrame" inherits="InsetFrameTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="10" y="-60"/>
                <Anchor point="BOTTOMRIGHT" x="-10" y="30"/>
            </Anchors>
            <Layers>
                <Layer level="ARTWORK">
                    <FontString inherits="GameFontNormalLarge" text="Pet Journal">
                        <Anchors><Anchor point="CENTER"/></Anchors>
                    </FontString>
                </Layer>
            </Layers>
        </Frame>

        <Frame parentKey="TeamFrame" hidden="true" inherits="InsetFrameTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="10" y="-60"/>
                <Anchor point="BOTTOMRIGHT" x="-10" y="30"/>
            </Anchors>
            <Layers>
                <Layer level="ARTWORK">
                    <FontString inherits="GameFontNormalLarge" text="Team Manager">
                        <Anchors><Anchor point="CENTER"/></Anchors>
                    </FontString>
                </Layer>
            </Layers>
        </Frame>

        <Frame parentKey="ScriptFrame" hidden="true" inherits="InsetFrameTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="10" y="-60"/>
                <Anchor point="BOTTOMRIGHT" x="-10" y="30"/>
            </Anchors>
            <Layers>
                <Layer level="ARTWORK">
                    <FontString inherits="GameFontNormalLarge" text="Script Editor">
                        <Anchors><Anchor point="CENTER"/></Anchors>
                    </FontString>
                </Layer>
            </Layers>
        </Frame>

        <Button parentKey="Tab1" inherits="PanelTabButtonTemplate" id="1" text="Journal">
            <Anchors> <Anchor point="BOTTOMLEFT" x="10" y="-30"/> </Anchors>
            <Scripts>
                <OnClick>
                    PanelTemplates_SetTab(self:GetParent(), 1)
                    PetWeaver:SetTab(1)
                </OnClick>
            </Scripts>
        </Button>
        <Button parentKey="Tab2" inherits="PanelTabButtonTemplate" id="2" text="Teams">
            <Anchors> <Anchor point="LEFT" relativeKey="$parent.Tab1" relativePoint="RIGHT" x="5" y="0"/> </Anchors>
            <Scripts>
                <OnClick>
                    PanelTemplates_SetTab(self:GetParent(), 2)
                    PetWeaver:SetTab(2)
                </OnClick>
            </Scripts>
        </Button>
        <Button parentKey="Tab3" inherits="PanelTabButtonTemplate" id="3" text="Scripts">
            <Anchors> <Anchor point="LEFT" relativeKey="$parent.Tab2" relativePoint="RIGHT" x="5" y="0"/> </Anchors>
            <Scripts>
                <OnClick>
                    PanelTemplates_SetTab(self:GetParent(), 3)
                    PetWeaver:SetTab(3)
                </OnClick>
            </Scripts>
        </Button>
    </Frames>

    <Scripts>
        <OnLoad> PetWeaver:OnLoad(self) </OnLoad>
        <OnDragStart> self:StartMoving() </OnDragStart>
        <OnDragStop> self:StopMovingOrSizing() </OnDragStop>
    </Scripts>
  </Frame>
</Ui>
