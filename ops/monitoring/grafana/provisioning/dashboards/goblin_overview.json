{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1000,
      "panels": [],
      "title": "Goblin System Overview",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "CPU usage of the host system",
      "fieldConfig": {
        "defaults": { "unit": "percent" },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "id": 1,
      "options": { "legend": { "displayMode": "list" } },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "title": "Host CPU Usage",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Memory usage of the host system",
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "id": 2,
      "options": { "legend": { "displayMode": "list" } },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes)",
          "legendFormat": "Memory Used",
          "refId": "A"
        }
      ],
      "title": "Host Memory Usage",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Disk usage percentage",
      "fieldConfig": {
        "defaults": { "unit": "percent" },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "id": 3,
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_free_bytes{mountpoint=\"/\"}) / node_filesystem_size_bytes{mountpoint=\"/\"} * 100",
          "legendFormat": "Disk Usage %",
          "refId": "A"
        }
      ],
      "title": "Disk Usage",
      "type": "timeseries"
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 2000,
      "panels": [],
      "title": "Docker / Containers",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "CPU usage per Goblin container",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 10 },
      "id": 4,
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"goblin.*\"}[2m]) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "title": "Container CPU Usage",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Memory usage of Goblin containers",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 10 },
      "id": 5,
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"goblin.*\"}",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "title": "Container Memory Usage",
      "type": "timeseries"
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 18 },
      "id": 3000,
      "title": "Goblin Backend Metrics",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Backend latency",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 19 },
      "id": 6,
      "targets": [
        {
          "expr": "goblin_backend_latency_ms",
          "legendFormat": "Backend Latency (ms)",
          "refId": "A"
        }
      ],
      "title": "Backend Latency (ms)",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Backend status (1=up, 0=down)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 19 },
      "id": 7,
      "targets": [
        {
          "expr": "goblin_backend_up",
          "legendFormat": "Backend Status",
          "refId": "A"
        }
      ],
      "title": "Backend Status",
      "type": "timeseries"
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 27 },
      "id": 4000,
      "title": "Goblin Agents",
      "type": "row"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "description": "Agent heartbeats",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 28 },
      "id": 8,
      "targets": [
        {
          "expr": "goblin_agent_heartbeat",
          "legendFormat": "{{agent}}",
          "refId": "A"
        }
      ],
      "title": "Agent Heartbeats",
      "type": "timeseries"
    }
  ],

  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["goblin"],
  "templating": { "list": [] },
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Goblin System Overview",
  "version": 1
}

